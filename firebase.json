{
  "hosting": {
    "public": "frontend/patientportal/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "cd frontend/patientportal && npm install --legacy-peer-deps",
      "cd frontend/patientportal && npm run build || true"
    ]
  }
  
}
